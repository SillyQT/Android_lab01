<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bai9"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số a:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txt_so_a_bai9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="-0123456789"
                android:ems="10"
                android:inputType="number|numberDecimal|numberSigned"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số b:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txt_so_b_bai9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="-0123456789"
                android:ems="10"
                android:inputType="number|numberDecimal|numberSigned"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/kq_Bai9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="#008242"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Kết quả ở đây..."
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_Tong_Bai9"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#CCCCCCCC"
            android:text="Tổng 2 số"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_Hieu_Bai9"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#CCCCCCCC"
            android:text="Hiệu 2 số"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_Tich_Bai9"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#CCCCCCCC"
            android:text="Tích 2 số"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_Thuong_Bai9"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#CCCCCCCC"
            android:text="Thương 2 số"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_UCLN_Bai9"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#CCCCCCCC"
            android:text="Ước chung lớn nhất"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>